<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminMain"
    android:background="@drawable/bokeha"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="-20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_margin="85dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt1"
                android:layout_width="199dp"
                android:layout_height="60dp"
                android:background="@drawable/username"
                android:text=" To Add a new data in the  Database
 Press Add Button!"
                android:textSize="16dp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="65dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttonview"
                android:text="ADD"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_margin="-20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt2"
                android:layout_width="199dp"
                android:layout_height="60dp"
                android:background="@drawable/username"
                android:text=" To Delete a new data in the  Database
 Press Delete Button!"
                android:textSize="16dp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="65dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttonview"
                android:text="DELETE"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_margin="60dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt3"
                android:layout_width="199dp"
                android:layout_height="60dp"
                android:background="@drawable/username"
                android:text=" To View the Updated file from  Database
 Press VIEW Button!"
                android:textSize="16dp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="65dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttonview"
                android:text="VIEW"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>